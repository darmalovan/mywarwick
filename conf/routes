# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                                      @controllers.ApplicationController.index
GET         /notifications                         @controllers.ApplicationController.index
GET         /activity                              @controllers.ApplicationController.index
GET         /news                                  @controllers.ApplicationController.index
GET         /search                                @controllers.ApplicationController.index

->          /sso                                   sso.Routes

->          /admin                                 admin.Routes

GET         /websockets/page                       @controllers.ApplicationController.socket

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                          @controllers.Assets.versioned(path="/public", file: Asset)

GET         /news/feed                             @controllers.NewsController.feed

GET         /service/gtg                           @controllers.ServiceCheckController.gtg

POST        /api/streams/:appId/notifications      @controllers.api.IncomingActivitiesController.postNotification(appId: String)
POST        /api/streams/:appId/activities         @controllers.api.IncomingActivitiesController.postActivity(appId: String)

GET         /api/streams/user                      @controllers.api.UserActivitiesController.get

GET         /api/tiles                             @controllers.api.TileDataController.requestTileData